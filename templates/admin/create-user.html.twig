{% extends 'base.html.twig' %}

{% block title %}Inscription d'une personne{% endblock %}

{% block body %}
    <h1>Créer un utilisateur</h1>

    {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate', 'data-turbo': 'false'}}) }}

    {{ form_row(registrationForm.email) }}
    {{ form_row(registrationForm.pseudo) }}

    {{ form_row(registrationForm.nom) }}
    {{ form_row(registrationForm.prenom) }}

    {{ form_row(registrationForm.plainPassword, {
        label: 'Mot de passe'
    }) }}

    {{ form_row(registrationForm.telephone) }}
    {{ form_row(registrationForm.sites) }}
    {{ form_row(registrationForm.administrateur) }}

    <a href="{{ path('app_home_index') }}" class="btn btn-secondary">Annuler</a>
    <button type="submit" class="btn btn-primary">Inscrire un utilisateur</button>
    <a href="{{ path('app_admin') }}" class="btn btn-light">Créer un nouvel utilisateur</a>

    {{ form_end(registrationForm) }}
{% endblock %}
