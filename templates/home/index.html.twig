{% extends 'base.html.twig' %}
{% block page_js %}
    <script src="{{ asset('js/home.js') }}"></script>
{% endblock %}
{% block title %}Home!{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/home.css') }}">
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/home.js') }}"></script>
{% endblock %}
{% block body %}
<div>
    <div class="div_info_user">
        <p>Date du jour : {{ "now"|date('d/m/Y') }}</p>
        <p>Participant : {{ app.user.prenom }} {{ app.user.nom|slice(0, 1) }}.</p>
    </div>
    <div class="filters-container">

        <!-- Site -->
        <div class="filter-item">
            <label for="filtreSite">Site</label>
            <select id="filtreSite">
                <option value="">Choississez un site</option>
                {% for site in sites %}
                    <option value="{{ site.id }}">{{ site.nomSite }}</option>
                {% endfor %}
            </select>
        </div>

        <!-- Recherche -->
        <div class="filter-item">
            <label for="inputSearch">Recherche</label>
            <input type="text" id="inputSearch" placeholder="Nom de la sortie...">
        </div>

        <!-- Dates -->
        <div class="filter-item">
            <label>Période</label>
            <div class="date-group">
                <input type="date" id="inputDateDebut">
                <span>→</span>
                <input type="date" id="inputDateFin">
            </div>
        </div>

        <!-- Checkboxes -->
        <div class="filter-item">
            <label>Filtres avancés</label>
            <div class="filter-checkboxes">
                <label><input type="checkbox" id="filtreOrganisateur"> Organisateur</label>
                <label><input type="checkbox" id="filtreInscrit"> Inscrit</label>
                <label><input type="checkbox" id="filtreNonInscrit"> Non inscrit</label>
                <label><input type="checkbox" id="filtrePassees"> Passées</label>
            </div>
        </div>

    </div>
    <table>
        <thead>
            {% include 'home/_thead.html.twig' %}
        </thead>
        <tbody id="tabHome">
            {% include 'home/_tbody.html.twig' %}
        </tbody>
    </table>
    <div class="btn-container">
        <a href="{{ path('app_sortie_create') }}" class="btn btn-dark">
            Créer une sortie
        </a>
    </div>
</div><br>
{% endblock %}

